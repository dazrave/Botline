# Server Configuration
PORT=3000
NODE_ENV=development

# Security Configuration
# Comma-separated list of allowed IPs for agent communication
ALLOWED_IPS=127.0.0.1,::1
# Shared secret for agent authentication (optional)
SHARED_SECRET=
# Comma-separated list of allowed Slack/Telegram users (optional)
ALLOWED_USERS=

# Slack Configuration
SLACK_BOT_TOKEN=xoxb-your-bot-token
SLACK_APP_TOKEN=xapp-your-app-token
SLACK_SIGNING_SECRET=your-signing-secret

# Telegram Configuration
TELEGRAM_BOT_TOKEN=your-telegram-bot-token
TELEGRAM_WEBHOOK_URL=https://your-domain.com/webhook/telegram

# AI Agent Configuration
# Claude
CLAUDE_API_KEY=your-claude-api-key
CLAUDE_MODEL=claude-3-5-sonnet-20241022

# OpenRouter (for multiple AI models)
OPENROUTER_API_KEY=your-openrouter-api-key
OPENROUTER_MODEL=anthropic/claude-3.5-sonnet

# Default AI Agent (claude or openrouter)
DEFAULT_AGENT=claude

# Logging
LOG_LEVEL=info

# Credit Timer Keeper
# Enable automatic heartbeat to keep Claude credit replenishment timer active
CREDIT_KEEPER_ENABLED=false
# Interval in minutes between heartbeat messages (default: 60 minutes)
CREDIT_KEEPER_INTERVAL=60
# Cooldown in minutes after real message before resuming heartbeats (default: 120 minutes)
CREDIT_KEEPER_COOLDOWN=120
